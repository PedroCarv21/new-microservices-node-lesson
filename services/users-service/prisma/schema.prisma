generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // O banco de dados será um arquivo chamado 'dev.db'
  // dentro desta pasta 'prisma'
  url      = "file:./dev.db" 
}

// Definição do nosso modelo de Usuário
model User {
  id        String   @id @default(cuid()) // Prisma gerencia o ID
  name      String
  email     String   @unique // O email deve ser único
  createdAt DateTime @default(now())

  @@map("users") // Mapeia para a tabela 'users' no banco
}